---
interface Props {
	title: string;
	description: string;
	href: string;
	date: string;
}

const { href, title, description, date } = Astro.props;
---

<article class="blog-card">
	<a href={href}>
		<div class="content">
			<p class="date">{new Date(date).toLocaleDateString('en-US', {
				year: 'numeric',
				month: 'long',
				day: 'numeric'
			})}</p>
			<h2>{title}</h2>
			<p class="description">{description}</p>
			<span class="read-more">Read More â†’</span>
		</div>
	</a>
</article>

<style>
	.blog-card {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}
	.blog-card:hover {
		transform: translateY(-5px);
	}
	.blog-card a {
		text-decoration: none;
		color: inherit;
	}
	.content {
		padding: 1.5rem;
	}
	.date {
		color: #666;
		font-size: 0.9rem;
		margin-bottom: 0.5rem;
	}
	h2 {
		font-size: 1.5rem;
		color: #2c3e50;
		margin: 0.5rem 0;
		line-height: 1.3;
	}
	.description {
		color: #666;
		margin: 0.5rem 0;
	}
	.read-more {
		display: inline-block;
		margin-top: 1rem;
		color: #3498db;
		font-weight: 500;
	}
</style>